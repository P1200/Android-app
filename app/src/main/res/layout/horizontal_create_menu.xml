<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/horizontal_create_menu">

    <TextView
        android:id="@+id/createMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/createMenuText"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/createTextNoteButton"
        style="?android:attr/buttonBarStyle"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_below="@+id/createMenuButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:text="@string/createTextNoteText"
        android:textSize="16sp">

    </Button>

    <Button
        android:id="@+id/readNoteFromFileButton"
        style="?android:attr/buttonBarStyle"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_below="@+id/createMenuButton"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:text="@string/readNoteFromFileText"
        android:textSize="16sp">

    </Button>
</RelativeLayout>