<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noteItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:focusable="true"
    android:clickable="true"
    android:elevation="8dp"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteNameText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/note_name_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/noteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/noteNameText"
            android:padding="3dp"
            android:text="@string/note_name_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/noteTypeText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteNameText"
            android:padding="3dp"
            android:text="@string/note_type_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/noteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteName"
            android:layout_toEndOf="@+id/noteTypeText"
            android:padding="3dp"
            android:text="@string/note_type_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/creationDateText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteType"
            android:padding="3dp"
            android:text="@string/creation_date_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteType"
            android:layout_toEndOf="@+id/creationDateText"
            android:padding="3dp"
            android:text="@string/creation_date_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/modificationDateText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/creationDateText"
            android:padding="3dp"
            android:text="@string/modification_date_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/modificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/creationDate"
            android:layout_toEndOf="@+id/modificationDateText"
            android:padding="3dp"
            android:text="@string/modification_date_text"
            android:textColor="@color/black" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
